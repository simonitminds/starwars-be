generator client {
  provider = "prisma-client-js"
}
generator pothos {
  provider = "prisma-pothos-types"
  clientOutput = "@prisma/client"
  output = "../src/pothos-types.ts"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  wallet Float
  items Item[]
  role  String
}


model Item {
  id       Int    @id @default(autoincrement())
  name     String @unique
  type     String
  price    Float
  description String
  user     User   @relation(fields: [userId], references: [id])
  userId   Int
  forSale  Boolean
}
